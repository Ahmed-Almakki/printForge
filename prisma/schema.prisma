generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  accounts Account[]
  products Product[]
}

model Account {
  id         Int      @id @default(autoincrement())
  userId     Int
  provider   String
  providerId String
  user       Users    @relation(fields: [userId], references: [id])
  updatedAt  DateTime @default(now()) @updatedAt

  @@unique([provider, providerId])
}

model Product {
  id        Int      @id @default(autoincrement())
  userId    Int
  url       String
  width     Int
  height    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  user      Users    @relation(fields: [userId], references: [id])
}
